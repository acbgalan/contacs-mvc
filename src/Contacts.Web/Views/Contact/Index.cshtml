@model IEnumerable<Contacts.Models.Contact>

@{
    ViewData["Title"] = "Listado de contactos";
}

<h1>Listado de contactos</h1>

<div class="row">
    <div class="col-6 col-md-3 col-xl-2">
        <a asp-controller="Contact" asp-action="Create" class="btn btn-primary my-3 w-100">Nuevo</a>
    </div>
</div>
<table class="table table-hover">
    <thead>
        <tr class="table-dark">
            <th>#</th>
            <th>@Html.DisplayNameFor(x => x.Name)</th>
            <th>@Html.DisplayNameFor(x => x.Phone)</th>
            <th>@Html.DisplayNameFor(x => x.Email)</th>
            <th>Operaciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(x => item.Id)</td>
                <td>@Html.DisplayFor(X => item.Name)</td>
                <td>@Html.DisplayFor(x => item.Phone)</td>
                <td>@Html.DisplayFor(x => item.Email)</td>
                <td>
                    <span class="mx-1">
                        <a asp-controller="Contact" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-search"></i></a>
                    </span>
                    <span class="mx-1">
                        <a asp-controller="Contact" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pen"></i></a>
                    </span>
                    <span class="mx-1">
                        <!-- Button trigger modal -->
                        <a href="#" data-bs-toggle="modal" data-bs-target="#delete-@item.Id"><i class="bi bi-trash"></i></a>

                        <!-- Modal -->
                        <div class="modal fade" id="delete-@item.Id" tabindex="-1" aria-labelledby="#delete-@item.Id" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5">Borrado de grupo</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <p>Va a proceder al borrado del contacto <b>@item.Name</b> ¿deseas confirmar la operación?</p>
                                    </div>
                                    <div class="modal-footer">
                                        <form asp-controller="Contact" asp-action="Delete" asp-route-id="@item.Id" method="post">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                                            <button type="submit" class="btn btn-primary">Si&nbsp;</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </span>
                </td>
            </tr>
        }
    </tbody>
</table>

